<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sang.course.dao.CourseIntroduceDao">

    <resultMap type="org.sang.config.pojo.course.CourseIntroduce" id="CourseIntroduceMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
        <result property="introduce" column="introduce" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CourseIntroduceMap">
        select
          id, gmt_create, gmt_modified, introduce
        from education_course.course_introduce
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CourseIntroduceMap">
        select
          id, gmt_create, gmt_modified, introduce
        from education_course.course_introduce
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CourseIntroduceMap">
        select
          id, gmt_create, gmt_modified, introduce
        from education_course.course_introduce
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="gmtCreate != null">
                and gmt_create = #{gmtCreate}
            </if>
            <if test="gmtModified != null">
                and gmt_modified = #{gmtModified}
            </if>
            <if test="introduce != null">
                and introduce = #{introduce}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into education_course.course_introduce(gmt_create, gmt_modified, introduce)
        values (#{gmtCreate}, #{gmtModified}, #{introduce})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update education_course.course_introduce
        <set>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
            <if test="introduce != null">
                introduce = #{introduce},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from education_course.course_introduce where id = #{id}
    </delete>

</mapper>